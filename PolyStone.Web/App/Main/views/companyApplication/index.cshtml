<div class="row clearfix" ng-controller="app.views.companyApplication.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Product")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" ng-click="vm.refresh();"><i class="material-icons">refresh</i> Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" /></th>
                            <th>@L("Id")</th>
                            <th>@L("CompanyName")</th>
                            <th>@L("CompanyType")</th>
                            <th>@L("RegionName")</th>
                            <th>@L("CreationTime")</th>
                            <th>@L("AuthStatus")</th>
                            <th>@L("Actions")</th>
                        </tr>
                        <tr>
                            <th><input type="checkbox" /></th>
                            <td style="width: 5%"><input type="text" name="applicationId" ng-model="vm.search.applicationId" required maxlength="32" class="form-control"></td>
                            <td style="width: 15%"><input type="text" name="companyName" ng-model="vm.search.companyName" required maxlength="32" class="form-control"></td>
                            <td style="width: 10%">

                                <select ng-model="selectedCategory">
                                    <option value="-1" selected="selected">选择类目</option>
                                    <option ng-repeat="x in vm.categoryList" value="{{x.id}}">{{x.categoryName}}</option>
                                </select>
                            </td>
                            <td style="width: 10%">
                                @*<input type="text" name="regionName" ng-model="vm.search.regionName" required maxlength="32" class="form-control">*@
                                                    </td>
                            <td style="width: 20%">
                                <div class="input-group date-picker date">
                                    <input type="text" class="form-control datePicker" ng-model="vm.search.fromDate" placeholder="选择起始日期">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                </div>
                                <div class="input-group date-picker date">
                                    <input type="text" class="form-control datePicker" ng-model="vm.search.endDate" placeholder="选择结束日期">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                </div>

                            </td>
                            <td style="width: 10%">
                                <select ng-model="selectedAuth">
                                    <option value="-1">审核状态</option>
                                    <option value="0">待审核</option>
                                    <option value="1">已通过</option>
                                    <option value="2">未通过</option>
                                </select>
                            </td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="application in vm.applicationList">
                            <td><input type="checkbox" /></td>
                            <td>{{application.id}}</td>
                            <td>{{application.companyName}}</td>
                            <td ng-if="company.companyType==0">企业</td>
                            <td ng-if="company.companyType==1">店铺</td>
                            <td>{{application.region.regionName}}</td>
                            <td>{{application.creationTime | date:'yyyy-MM-dd hh:mm:ss'}}</td>
                            <td ng-if="application.authStatus==0">未发布</td>
                            <td ng-if="application.authStatus==1">通过</td>
                            <td ng-if="application.authStatus==2">下线</td>
                            <td ng-if="application.authStatus==3">已过期</td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.gotoDetail(application.id)"><i class="material-icons">create</i>@L("Edit")</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(application)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <a ui-sref="companyApplicationEdit"  class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" >
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>
</div>