<form id="frm_create_contact" name="contactCreateForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("EditContact")</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="linkMan" type="text" name="linkMan" ng-model="vm.contact.linkMan" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="linkMan" class="form-label">@L("LinkMan")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="phone" type="text" name="phone" ng-model="vm.contact.phone" required maxlength="32" class="validate form-control">
                        <label for="phone" class="form-label">@L("Phone")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="tel" type="text" name="tel" ng-model="vm.contact.tel" maxlength="256" class="validate form-control">
                        <label for="tel" class="form-label">@L("Tel")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="email" type="text" name="email" ng-model="vm.contact.email" required maxlength="32" class="validate form-control">
                        <label for="email" class="form-label">@L("Email")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="">
                        <input id="isactive" type="checkbox" name="isDefault" ng-model="vm.contact.isDefault" checked class="form-control" />
                        <label for="isactive" class="form-label">@L("IsDefault")</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="categoryCreateForm.$invalid">
            @L("Save")
        </button>
    </div>

</form>