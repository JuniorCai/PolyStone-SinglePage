<div class="row clearfix" ng-controller="app.views.company.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Company")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" ng-click="vm.refresh();"><i class="material-icons">refresh</i> 刷新</a></li>
                            <li><a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" style="color: #F44336" ng-click="vm.multiDelete();"><i style="color: #F44336" class="material-icons">delete</i> 删除</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" /></th>
                            <th>@L("CompanyName")</th>
                            <th>@L("CompanyType")</th>
                            <th>@L("MemberLevel")</th>
                            <th>@L("RegionName")</th>
                            <th>@L("IsActive")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="company in vm.companyList">
                            <td><input type="checkbox" /></td>
                            <td>{{company.companyName}}</td>
                            <td ng-if="company.companyType==0">企业</td>
                            <td ng-if="company.companyType==1">店铺</td>
                            <td ng-if="company.user.userType==2">未认证企业</td>
                            <td ng-if="company.user.userType==3">认证企业</td>
                            <td>{{company.region.regionName}}</td>
                            <td>
                                <i class="material-icons" ng-if="company.isActive" style="color:green;">check_box</i>
                                <i class="material-icons" ng-if="!company.isActive" style="color:red;">indeterminate_check_box</i>
                            </td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.goToCompanyDetail(company.id)"><i class="material-icons">create</i>@L("Edit")</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(company)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a ui-sref="companyAdd"  class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" >
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>
</div>