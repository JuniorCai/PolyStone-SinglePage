<div class="row clearfix" ng-controller="app.views.company.createCompany as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("CreateCompany")
                </h2>
            </div>
            <div class="form" style="margin: 20px">
                <form id="frm_create_company" name="companyCreateForm" class="form-horizontal form-bordered bordered" novalidate>
                    <div class="form-body">
                        <uib-tabset class="tab-container tabbable-line">
                            <uib-tab heading="基本信息">
                                <div class="form-group">
                                    <label class="control-label col-md-2">企业全称
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="name" class="hasInputBorder form-control " name="name" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">企业简称
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="name" class="hasInputBorder form-control " name="name" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">企业LOGO</label>
                                    <div class="col-md-6">
                                        <div>
                                            <div ng-repeat="item in fileUploader.queue" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                                <div ng-thumb="{file:item._file, height: 80,width:80}"></div>
                                            </div>
                                            <div style="clear: both; padding: 10px 0" id="uploadDiv">

                                                <label>
                                                    <img class="thumbDefault" onclick="javascript: $('#uploadFile').click();" />
                                                </label>
                                                <input type="file" nv-file-select multiple="" filters="imageFilter" id="uploadFile1" uploader="fileUploader1" ng-show="false" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">所属行业
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <select class="selectpicker" ng-model="selectedCategory">
                                                <option value="0" selected="selected">选择类目</option>
                                                <option ng-repeat="x in vm.categoryList" value="{{x.id}}">{{x.categoryName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">经营范围</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="companyId" class="hasInputBorder form-control " name="companyId" type="text" ng-model="vm.product.companyId" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">地区
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            @*                                    <input id="name" class="hasInputBorder form-control" name="name" type="text" value="" />*@
                                            <select ng-model="selectedCategory">
                                                <option value="0" selected="selected">选择类目</option>
                                                <option ng-repeat="x in vm.categoryList" value="{{x.id}}">{{x.categoryName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">公司介绍</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            @*                                    <input id="name" class="hasInputBorder form-control" name="name" type="text" value="" />*@
                                            <textarea cols="80" rows="10" style="padding: 12px" ng-model="vm.product.detail"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </uib-tab>
                            <uib-tab heading="资质认证">
                                <div class="form-group">
                                    <label class="control-label col-md-2">营业执照</label>
                                    <div class="col-md-6">
                                        <div>
                                            <div ng-repeat="item in fileUploader.queue" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                                <div ng-thumb="{file:item._file, height: 80,width:80}"></div>
                                            </div>
                                            <div style="clear: both; padding: 10px 0" id="uploadDiv">

                                                <label>
                                                    <img class="thumbDefault" onclick="javascript: $('#uploadFile').click();" />
                                                </label>
                                                <input type="file" nv-file-select multiple="" filters="imageFilter" id="uploadFile" uploader="fileUploader" ng-show="false" />
                                            </div>
                                            <div style="clear: both; padding: 10px 0">已选择：{{ fileUploader.queue.length }}</div>


                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">法人姓名</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="legalPerson" class="hasInputBorder form-control " name="legalPerson" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">法人身份证人像面照</label>
                                    <div class="col-md-6">
                                        <div>
                                            <div ng-repeat="item in fileUploader.queue" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                                <div ng-thumb="{file:item._file, height: 80,width:80}"></div>
                                            </div>
                                            <div style="clear: both; padding: 10px 0" id="uploadDiv">

                                                <label>
                                                    <img class="thumbDefault" onclick="javascript: $('#uploadFile').click();" />
                                                </label>
                                                <input type="file" nv-file-select multiple="" filters="imageFilter" id="uploadFile" uploader="fileUploader" ng-show="false" />
                                            </div>
                                            <div style="clear: both; padding: 10px 0">已选择：{{ fileUploader.queue.length }}</div>


                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">法人身份证国徽面照</label>
                                    <div class="col-md-6">
                                        <div>
                                            <div ng-repeat="item in fileUploader.queue" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                                <div ng-thumb="{file:item._file, height: 80,width:80}"></div>
                                            </div>
                                            <div style="clear: both; padding: 10px 0" id="uploadDiv">

                                                <label>
                                                    <img class="thumbDefault" onclick="javascript: $('#uploadFile').click();" />
                                                </label>
                                                <input type="file" nv-file-select multiple="" filters="imageFilter" id="uploadFile" uploader="fileUploader" ng-show="false" />
                                            </div>
                                            <div style="clear: both; padding: 10px 0">已选择：{{ fileUploader.queue.length }}</div>


                                        </div>

                                    </div>
                                </div>

                            </uib-tab>
                            <uib-tab heading="联系方式">
                                <div class="form-group">
                                    <label class="control-label col-md-2">联系人</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="linkMan" class="hasInputBorder form-control " name="linkMan" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">手机号码</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="mobile" class="hasInputBorder form-control " name="mobile" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">传真电话</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="tel" class="hasInputBorder form-control " name="tel" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">详细地址</label>
                                    <div class="col-md-4">
                                        <div class="input-icon right" style="float: none !important">
                                            <input id="address" class="hasInputBorder form-control " name="address" type="text" ng-model="vm.product.title" />
                                        </div>
                                    </div>
                                </div>
                            </uib-tab>
                        </uib-tabset>
                    </div>
                    <div class=" form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="button" class="btn gray " ng-click="vm.cancel()">
                                    @L("Cancel")
                                </button>
                                <button type="submit" class="btn green" ng-click="vm.save()" ng-disabled="productCreateForm.$invalid">
                                    @L("Save")
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
