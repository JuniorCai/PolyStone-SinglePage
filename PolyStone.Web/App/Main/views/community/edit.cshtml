<div class="row clearfix" ng-controller="app.views.community.editCommunity as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("CreateCommunity")
                </h2>
            </div>
            <div class="form" style="margin: 20px">
                <form id="frm_create_community" name="communityCreateForm" class="form-horizontal form-bordered bordered" url="@Url.Action("UpdateCommunity","Community")" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">标题</label>
                            <div class="col-md-4">
                                <div class="input-icon right" style="float:none !important">
                                    <input id="name" class="hasInputBorder form-control " name="name" type="text" ng-model="vm.community.title" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">类目</label>
                            <div class="col-md-4">
                                <div class="input-icon right" style="float:none !important">
                                    @*                                    <input id="name" class="hasInputBorder form-control" name="name" type="text" value="" />*@
                                    <select ng-model="selectedCategory">
                                        <option value="0" selected="selected">选择类目</option>
                                        <option ng-repeat="x in vm.categoryList" value="{{x.id}}">{{x.categoryName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">所属会员ID</label>
                            <div class="col-md-4">
                                <div class="input-icon right" style="float:none !important">
                                    <input id="userId" class="hasInputBorder form-control " name="userId" type="number" ng-model="vm.community.userId" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">上传图片</label>
                            <div class="col-md-6">
                                <div>
                                    <div ng-repeat="imgUrl in vm.imgUrls" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                        <img ng-src="{{imgUrl}}" style="width: 80px;height: 80px"/>
                                    </div>
                                    <div ng-repeat="item in fileUploader.queue" style="float: left" class="thumbUploaded" ng-click="vm.delImg()">
                                        <div ng-thumb="{file:item._file, height: 80,width:80}" style="height: 80px"></div>
                                    </div>
                                    <div style="clear: both; padding: 10px 0" id="uploadDiv">

                                        <label>
                                            <img class="thumbDefault" onclick="javascript: $('#uploadFile').click();"/>
                                        </label>
                                        <input type="file" nv-file-select multiple="" filters="uploadLimit,imageFilter" id="uploadFile" uploader="fileUploader" ng-show="false"/>
                                    </div>
                                    @* <div style="clear: both; padding: 10px 0">已选择：{{ fileUploader.queue.length }}</div> *@


                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">产品描述</label>
                            <div class="col-md-4">
                                <div class="input-icon right" style="float:none !important">
                                    @*                                    <input id="name" class="hasInputBorder form-control" name="name" type="text" value="" />*@
                                    <textarea cols="80" rows="10" style="padding:12px" ng-model="vm.community.detail"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="button" class="btn gray " ng-click="vm.cancel()">
                                    @L("Cancel")
                                </button>
                                <button type="submit" class="btn green" ng-click="vm.save()" ng-disabled="communityCreateForm.$invalid">
                                    @L("Save")
                                </button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
