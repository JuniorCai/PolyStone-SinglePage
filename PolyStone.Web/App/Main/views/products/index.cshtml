<div class="row clearfix" ng-controller="app.views.product.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Product")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" ng-click="vm.refresh();"><i class="material-icons">refresh</i> Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" /></th>
                            <th>@L("Id")</th>
                            <th>@L("Title")</th>
                            <th>@L("CategoryName")</th>
                            <th>@L("CompanyName")</th>
                            <th>产品图片</th>
                            <th>@L("VerifyStatus")</th>
                            <th>@L("ReleaseStatus")</th>
                            <th>@L("CreationTime")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <td><input type="text" name="productId" ng-model="vm.search.productId" required maxlength="32" class="form-control"></td>
                        <td><input type="text" name="title" ng-model="vm.search.title" required maxlength="32" class="form-control"></td>
                        <td>

                            <select ng-model="selectedCategory" >
                                <option value="0" selected="selected">选择类目</option>
                                <option ng-repeat="x in vm.categoryList" value="{{x.id}}">{{x.categoryName}}</option>
                            </select>
                        </td>
                        <td><input type="text" name="companyName" ng-model="vm.search.companyName" required maxlength="32" class="form-control"></td>
                        <td></td>
                        <td>
                            <select ng-model="selectedVerify">
                                <option value="0">待审核</option>
                                <option value="1">已通过</option>
                                <option value="2">未通过</option>
                            </select>
                        </td>
                        <td>
                            <select ng-model="selectedRelease">
                                <option value="0">未发布</option>
                                <option value="1">发布中</option>
                                <option value="2">已下线</option>
                                <option value="3">过期</option>
                            </select>
                        </td>
                        <td>
                            <input type="text" class="ui-datepicker" id="fromDate"/>
                            <input type="text" class="ui-datepicker" id="endDate"/>
                        </td>
                        <td></td>
                    </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="category in vm.categoryList">
                            <td><input type="checkbox" /></td>
                            <td>{{product.id}}</td>
                            <td>{{product.title}}</td>
                            <td>{{product.categoryName}}</td>
                            <td>{{product.companyName}}</td>
                            <td><img src="{{category.imgUrls[0]}}"/></td>
                            <td>{{product.verifyStatus}}</td>
                            <td>{{product.releaseStatus}}</td>
                            <td>{{product.createTime}}</td>
                            <td>
                                <i class="material-icons" ng-if="category.isActive" style="color:green;">check_box</i>
                                <i class="material-icons" ng-if="!category.isActive" style="color:red;">indeterminate_check_box</i>
                            </td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openCategoryEditModal(category)"><i class="material-icons">create</i>@L("Edit")</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(category)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <a ui-sref="productsAdd"  class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" >
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>
</div>